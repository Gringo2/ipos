    .chip { display:inline-block; padding:6px 10px; border-radius:8px; background:rgba(0,0,0,0.04); font-size:12px; }
    /* small responsive tweaks */
    @media (max-width:768px){ .hero-grid { grid-template-columns: 1fr !important; } }

    /* FAQ Accordion Styles */
    details > summary { list-style: none; }
    details > summary::-webkit-details-marker { display: none; }
    details[open] summary .faq-arrow { transform: rotate(180deg); }
    .faq-arrow { transition: transform 0.2s ease-in-out; }
  </style>
